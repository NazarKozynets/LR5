<Window x:Class="laba5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Figures App" Height="400" Width="600">
    <Grid>
        <Canvas x:Name="DrawingCanvas" Background="White" Margin="10" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button x:Name="CircleButton" Content="Circle" Click="CircleButton_Click" Margin="5" />
            <Button x:Name="SquareButton" Content="Square" Click="SquareButton_Click" Margin="5" />
            <Button x:Name="RhombButton" Content="Rhomb" Click="RhombButton_Click" Margin="5" />
        </StackPanel>
    </Grid>
</Window>